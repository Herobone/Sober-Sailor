{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "sourceRoot": "src",
    "rootDir": "src"
  },
  "compileOnSave": true,
  "include": [
    "./src"
  ],
  "exclude": [
    "../node_modules/",
    "lib",
    "../src",
    "node_modules"
  ]
}
