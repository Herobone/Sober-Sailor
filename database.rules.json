{
  "rules": {
    "$gameID": {
      ".read": "auth != null && data.child('users').child(auth.uid).exists()",
      "users": {
        ".validate": true,
        "$uid": {
          ".validate": true,
          ".write": "auth != null && $uid === auth.uid",
          "answer": {
            ".validate": true
          },
          "lastOnline": {
            ".validate": "newData.isNumber()"
          },
          "onlineState": {
            ".validate": "newData.isBoolean()"
          },
          "readyState": {
            ".validate": "newData.isNumber()"
          }
        }
      },
      "$other": {
        ".validate": false
      }
    }
  }
}